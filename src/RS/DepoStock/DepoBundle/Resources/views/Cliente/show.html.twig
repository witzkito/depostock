{% extends "DepoBundle::layout.html.twig" %}

{% block body -%}
    <div class="container">
        <h1>Cliente</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Nombre</th>
                    <td>{{ entity.nombre }}</td>
                </tr>
                <tr>
                    <th>Localidad</th>
                    <td>{{ entity.localidad }}</td>
                </tr>
                <tr>
                    <th>Calle</th>
                    <td>{{ entity.calle }}</td>
                </tr>
                <tr>
                    <th>Numero</th>
                    <td>{{ entity.numero }}</td>
                </tr>
                <tr>
                    <th>Telefono</th>
                    <td>{{ entity.telefono }}</td>
                </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <span class="glyphicon glyphicon-chevron-left"></span>
                <a href="{{ path('cliente') }}">
                    Volver a la lista
                </a>
            </li>
            <li>
                <span class=" glyphicon glyphicon-floppy-disk"></span>
                <a href="{{ path('cliente_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
