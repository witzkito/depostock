{% extends "DepoBundle::layout.html.twig" %}

{% block body -%}
    <div class="container">
            <h1>Pedido</h1>

            <table class="table table-striped">
                <tbody>
                    <tr>                        
                        <th>Fecha</th>
                        <td colspan="2">{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Cliente</th>
                        <td colspan="2">{{ entity.cliente }}</td>
                    </tr>
                    {% for producto in entity.productos %}
                        <tr>
                            <td></td>
                            <td><span class="glyphicon glyphicon-chevron-right"></span>&nbsp; &nbsp;{{producto.producto}}</td>
                            <td>{{producto.cantidad}}</td>
                        </tr>    
                    {% endfor %}                     
                </tbody>
            </table>

                <ul class="record_actions">
            <li>
                <span class="glyphicon glyphicon-chevron-left"></span>
                <a href="{{ path('pedido') }}">
                    Volver a la lista
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
