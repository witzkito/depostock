{% extends "DepoBundle::layout.html.twig" %}

{% block body -%}
    <div class="container">
            <h1>Ingreso</h1>

            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Fecha</th>
                        <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th colspan="2">Productos</th>
                    </tr>
                    {% for prod in entity.productos %}
                        <tr>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{prod.producto}}</td>
                            <td>{{prod.cantidad}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

                <ul class="record_actions">
            <li>
                <span class="glyphicon glyphicon-chevron-left"></span>
                <a href="{{ path('depo_homepage') }}">
                    Volver a la lista
                </a>
            </li>
            <li>
                <span class=" glyphicon glyphicon-floppy-disk"></span>
                <a href="{{ path('ingreso_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
